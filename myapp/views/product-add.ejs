<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head')%>


<body>
	<%- include('./partials/header')%>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<form class="form" action="/catalogo/productAdd" method="POST">
				<div class="input-nombre">
				  <input id="nombre" class="input" type="text" name="nombre" placeholder="Nombre" />
				</div>
				<div class="input-imagen">
				  <input id="imagen" class="input" type="text" name="imagen" placeholder="Ruta De Imagen" />
				</div>
				<div class="input-descripcion">
				  <input id="descripcion" class="input" type="text" name="descripcion" placeholder="Descripcion" />
				</div>
				
				<button type="text" class="submit">Agregar Producto</button>
	
	
			  </form>


	<%- include('./partials/footer')%>
</body>

</html>