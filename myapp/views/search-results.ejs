<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>

		<%- include('./partials/headerLogin') %>
		
	<% } else { %>

		<%- include('./partials/header') %>
		
		<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda: <%palabra%> </h2>
			</div>

			<% for (let i = 0; i < buscado.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/catalogo/detalle/<%= buscado[i].id %>">
					  <figure class="product-box_image">
						<img src="/images/products/<%= buscado[i].imagen %>" alt="<%= buscado[i].nombre %>">
					  </figure>
					  <article class="product-box_data">
						<h2>Producto: <%= buscado[i].nombre %></h2>
						<p>Descripcion: <%= buscado[i].descripcion %></p>
						<p><a href="/users/profile/<% buscado[i].usuario_id %>"> Usuario: <%= buscado[i].usuario_id %> </a></p>
					  </article>
					</a>
				  </section>
				</div>
			  <% } %>
		


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>