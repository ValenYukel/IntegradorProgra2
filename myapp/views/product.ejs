<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<% if (locals.user != undefined) { %>

		<%- include('./partials/headerLogin') %>
		
	<% } else { %>

		<%- include('./partials/header') %>
		
		<% } %>



	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= buscado.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/catalogo/productAdd">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= buscado.imagen %>" alt="<%= buscado.nombre %>" class="product-detail-img">
					<p class="product-detail-description"><%= buscado.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/perfil/<% buscado.usuario.id %>"> Nombre usuario: <%= buscado.usuario.nombre %> </a> </strong>
							</div>
						</article>

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>

	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>